source "https://rubygems.org"
ruby "2.2.3"

# Sinatra is obviously what is powering this app.
gem "sinatra"

# Dotenv gives us the ability to create "ENV['VARIABLE']" variables like those
# Heroku expects.
gem "dotenv"

# Everyone likes to party when making http requests.
gem "httparty"

# The webserver.
gem "puma"

# The templating language
gem "haml"
